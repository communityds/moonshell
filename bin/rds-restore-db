#!/usr/bin/env bash
#
#
#

source $(dirname $0)/../moon.sh

if [[ $# -lt 3 ]]; then
    echoerr "Usage: $(basename $0) ENVIRONMENT DATABASE IN_FILE"
    exit 0
else
    ENVIRONMENT=$1
    STACK_NAME="${APP_NAME}-${ENVIRONMENT}"
    DATABASE=$2
    IN_FILE=$3
fi

rds_restore_db ${STACK_NAME} ${DATABASE} ${IN_FILE}

exit $?
